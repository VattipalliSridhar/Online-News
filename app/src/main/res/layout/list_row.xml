<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/thumbnail"
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:maxLines="2"
        android:textStyle="bold"
        android:text="12 ఎర్రచందనం దుంగలు స్వాధీనం, ఆరుగురు అరెస్టు:"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title_txt"
        android:id="@+id/content_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:text="కడప : కడప జిల్లా ఒంటిమిట్ట పరిధిలో పోలీసులు తనిఖీలు నిర్వహించారు. వాహనంలో తరలిస్తున్న 12 ఎర్రచందనం దుంగలు స్వాధీనం చేసుకొని దుంగలను తరలిస్తున్న ఆరుగురిని పోలీసులు అరెస్టు చేశారు."
        android:textColor="@android:color/black"
        />



</RelativeLayout>